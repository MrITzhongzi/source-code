.box {
  padding-bottom: 100rpx;
  position: relative;
}

.pro-info {
  background-color: #f2f2f2;
  padding-bottom: 20rpx;
}

.base-info {
  background-color: white;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-bottom: 40rpx;
}

.base-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.price {
  color: #e65507;
  font-size: 18px;
  font-weight: 700;
}

.pri-content {
  font-size: 25px;
}

.share-box {
  font-size: 16px;
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  padding: 10rpx 15rpx;
}

.share-box image {
  width: 35rpx;
  margin: 0 10rpx;
}

.base-middle {
  display: flex;
  margin-top: 20rpx;
}

.pro-tag {
  margin: 0 15rpx;
  font-size: 16px;
  color: black;
  font-weight: bold;
}

.base-bottom {
  margin-top: 20rpx;
  font-size: 14px;
  color: #929292;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
}

