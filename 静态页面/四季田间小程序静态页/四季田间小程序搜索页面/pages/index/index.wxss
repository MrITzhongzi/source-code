.pro-list-box{
  background-color: #f2f2f2;
}

.search-header {
  background-color: white;
}

.search-con {
  width: 94%;
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-left: 3%;
  border-radius: 10rpx;
  overflow: hidden;
  font-size: 15px;
  background: #f2f2f2;
  display: flex;
  align-items: center;
}

.search-con image {
  width: 40rpx;
  margin: 0 20rpx 0 10rpx;
}

.search-con input {
  flex-grow: 1;
  height: 80rpx;
  background-color: #f2f2f2;
}

.search-type {
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  font-weight: bold;
  margin-top: 30rpx;
}

.new-product {

}

.search-sort {
  display: flex;
}

.search-sort image {
  width: 20rpx;
  margin-right: 10rpx;
  padding-bottom: 20rpx;
}



.activity-content {
  display: flex;
  margin-top: 20rpx;
  background-color: white;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.ac-con-left {
  width: 180rpx;
}

.ac-con-left image {
  width: 100%;
}

.ac-con-right {
  box-sizing: border-box;
  padding: 0 20rpx;
  position: relative;
  flex-grow: 1;
}

.ac-pro-tag {
  font-size: 13px;
}

.ac-pro-tag span {
  font-weight: bold;
  margin-right: 15rpx;
}

.sell-number {
  color: #929292;
  font-size: 13px;
  margin-top: 10rpx;
}

.ac-pri-price {

}

.new-price {
  color: #e65507;
  font-size: 14px;
  font-weight: bold;
}

.old-price {
  font-size: 12px;
  color: #929292;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.buy-pro-box {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  
}

.buy-pro-btn-green {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0;
  outline: none;
  font-size: 13px;
  text-align: center;
  color: #7ED321;
  border: 1px solid #7ED321;
  float: right;
  font-weight: bold;
}