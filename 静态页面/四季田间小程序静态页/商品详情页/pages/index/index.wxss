}

.pro-num-con {
  background-color: #eee;
}

.minusStatus {
  background-color: #eee;
}

.plusStatus {
  background-color: #eee;
}

/* 数量选择器 start */

.stepper {
  width: 100%;
  height: 50rpx;
  float: left;
  margin-top: 18rpx;
}

.stepper text {
  width: 60rpx;
  line-height: 50rpx;
  height: 60rpx;
  max-height: 60rpx;
  text-align: center;
  float: left;
  font-size: 24rpx;
  margin: 0 5rpx;
  font-weight: bold;
}

.stepper input {
  width: 80rpx;
  height: 60rpx;
  max-height: 60rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
}

.stepper .normal {
  color: black;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
  width: 50rpx;
  height: 50rpx;
}

.stepper .disabled {
  color: gray;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
  width: 50rpx;
  height: 50rpx;
  background-color: #f8f8f8;
}

/* 数量选择器 end */

.buy-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  
}

.buy-btn button {
  border: none;
  outline: none;
  color: white;
  border-radius: 0rpx;
  background: linear-gradient(to left, #62BE00, #9ACD22);
}
